<div class="container">

  <!-- div ng-include="'partials/study.html'"></div -->

  <div class="page-content col-md-8 col-md-offset-2" ng-controller="CardCtrl">

    <div class="row">
      <div class="btn-toolbar pull-right" style="margin-bottom: 5px;">
        <div class="btn-group" ng-show="isEditing" ng-cloak>
          <button type="button" class="btn btn-primary" ng-click="b1()" tooltip="Hide this seletion">{ }</button>
          <button type="button" class="btn btn-primary" ng-click="b2()" tooltip="Cloze this selection">[..]</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-primary" ng-click="add()"  tooltip="New card"><i class="glyphicon glyphicon-plus-sign"></i> </button>
          <button type="button" class="btn btn-primary" ng-click="deleteCard()"  tooltip="Delete this card"><i class="glyphicon glyphicon-remove"></i ></button>
          <button type="button" class="btn btn-primary" ng-click="reset()" tooltip="Reset cards">R</button>
          <button type="button" class="btn btn-primary" ng-click="clear()" tooltip="Clear all cards">C</button>
          <button type="button" class="btn btn-primary" ng-click="edit()" tooltip="Edit"><i class="glyphicon glyphicon-pencil"></i> </button>
        </div>
      </div>
    </div>

    <div ng-hide="filteredCards.length" ng-cloak>
      <div class="card editable" ng-click="add()">
        No cards
        <br />Click to add
        <p>
          <button type="button" class="btn btn-lg btn-link" tooltip="Add"><i class="glyphicon glyphicon-plus-sign"></i>  </button>
        </p>
      </div>
    </div>

    <div id="review" ng-hide="isEditing || !filteredCards.length" tabindex="0" ui-keyup="{'left right space enter up down':'keypressCallback($event)'}">
      <div class="card editable" ng-class="{clozed: clozed}" ng-dblclick="edit(card)" ng-bind-html-unsafe="card.text | formatCard"></div>
    </div>

    <div id="edit" ng-show="isEditing && filteredCards.length > 0" ng-cloak>
      <textarea class="form-control cardEditor animate-show" rows="5" placeholder="Card contents" ng-model="card.text" card-blur="edit(false)"></textarea>
    </div>

   <div id="cardControl" class="well" tabindex="0" ui-keyup="{'left right space enter':'keypressCallback($event)'}">
    <div class="row">
      <div class="col-md-4 text-center">
        <div ng-cloak>
          <x-small>Card \{{index+1}} / \{{filteredCards.length}} total</x-small>
          <br />Due \{{card.due | dateDays }}
          <br />\{{( cards | dueNow ).length}} due
          <br />
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="btn-group" >
          <button type="button" class="btn btn-default" ng-click="up()" ng-hide="clozed" tooltip="Correct"><i class="glyphicon glyphicon-thumbs-up"></i> </button>
          <button type="button" class="btn btn-default" ng-click="flip()" tooltip="Flip"><i class="glyphicon glyphicon-repeat"></i> </button>
          <button type="button" class="btn btn-default" ng-click="down()" ng-hide="clozed" tooltip="Incorrect"><i class="glyphicon glyphicon-thumbs-down"></i> </button>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="btn-group">
          <a class="btn btn-default" ng-click="prev()"  tooltip="Next">&laquo;</a>
          <!-- li ng-repeat="card in cards" ng-class="{active: $index == index}"><a ng-click="goto($index)">\{{$index+1}}</a></li -->
          <a class="btn btn-default" ng-click="next()" tooltip="Previous">&raquo;</a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
          <a class="btn btn-xs btn-default" href="#/" ng-model="filter" btn-radio="0">Due</a>
          <a class="btn btn-xs btn-default" href="#/soon" ng-model="filter" btn-radio="1">1day</a>
          <a class="btn btn-xs btn-default" href="#/all" ng-model="filter" btn-radio="-1">All</a>
      </div>
    </div>
  </div>


