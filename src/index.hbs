<div class="container">

  <!-- div ng-include="'partials/study.html'"></div -->

  <div class="page-content col-md-8 col-md-offset-2" ng-controller="CardCtrl">

    <div class="row">
      <div class="btn-toolbar pull-right" style="margin-bottom: 5px;">
        <div class="btn-group" ng-show="isEditing" ng-cloak>
          <button type="button" class="btn btn-primary" ng-click="wrap('*','*')" tooltip="Italic"><i class="glyphicon glyphicon-italic"></i></button>
          <button type="button" class="btn btn-primary" ng-click="wrap('**','**')" tooltip="Bold"><i class="glyphicon glyphicon-bold"></i></button>
        </div>
        <div class="btn-group" ng-show="isEditing" ng-cloak>
          <button type="button" class="btn btn-primary" ng-click="wrap('\{','\}')" tooltip="Hide this seletion">{ }</button>
          <button type="button" class="btn btn-primary" ng-click="wrap('\{\{','\}\}')" tooltip="Cloze this selection">[..]</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-primary" ng-click="add()"  tooltip="New card"><i class="glyphicon glyphicon-plus-sign"></i> </button>
          <button type="button" class="btn btn-primary" ng-show="!isEditing" ng-click="edit()" tooltip="Edit"><i class="glyphicon glyphicon-pencil"></i> </button>
          <button type="button" class="btn btn-primary" ng-cloak ng-show="isEditing" ng-click="edit()" tooltip="Save"><i class="glyphicon glyphicon-save"></i> </button>
          <button type="button" class="btn btn-primary" ng-click="deleteCard()"  tooltip="Delete this card"><i class="glyphicon glyphicon-remove"></i ></button>
        </div>
      </div>
    </div>

    <div ng-hide="filteredCards.length" ng-cloak>
      <div class="card editable" ng-click="add()">
        No cards
        <br />Click to add
        <p>
          <button type="button" class="btn btn-lg btn-link" tooltip="Add"><i class="glyphicon glyphicon-plus-sign"></i>  </button>
        </p>
      </div>
    </div>

    <div id="review" ng-hide="isEditing || !filteredCards.length" tabindex="0" ui-keyup="{'left right space enter up down':'keypressCallback($event)'}">
      <div class="card editable" ng-class="{clozed: clozed}" ng-dblclick="edit(card)" ng-bind-html="card.text | formatCard"></div>
    </div>

    <div id="edit" ng-show="isEditing && filteredCards.length > 0" ng-cloak>
      <textarea class="form-control cardEditor animate-show" rows="5" placeholder="Card contents" ng-model="card.text" card-blur="edit(false)"></textarea>
    </div>

   <div id="cardControl" class="well" tabindex="0" ui-keyup="{'left right space enter':'keypressCallback($event)'}">
    <div class="row">
      <div class="col-md-12">
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: \{{(index)/(filteredCards.length-1)*100}}%;">
            <span class="sr-only">Card \{{index+1}} / \{{filteredCards.length}}</span>
          </div>
        </div>

        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width: \{{((cards | statusFilter:2).length)/(cards.length)*100}}%;" tooltip="\{{(cards | statusFilter:2).length}} done">
            <span class="sr-only">\{{(cards | statusFilter:2).length}} done</span>
          </div>
          <div class="progress-bar progress-bar-danger" role="progressbar" style="width: \{{((cards | statusFilter:1).length)/(cards.length)*100}}%;" tooltip="\{{(cards | statusFilter:1).length}} due">
            <span class="sr-only">\{{(cards | statusFilter:1).length}} due</span>
          </div>
          <div class="progress-bar progress-bar-info" role="progressbar" style="width: \{{((cards | statusFilter:0).length)/(cards.length)*100}}%;" tooltip="\{{(cards | statusFilter:0).length}} new">
            <span class="sr-only">\{{(cards | statusFilter:0).length}} new</span>
          </div>
        </div>

      </div>
      <div class="col-md-3 text-center">
        <div ng-cloak>
          <x-small>
          \{{card | status | statusText}}
          <br />Due \{{card.due | dateDays }}
          </x-small>
        </div>
      </div>
      <div class="col-md-6 text-center">
        <div class="btn-group" >
          <button type="button" class="btn btn-lg btn-default" ng-click="up()" ng-disabled="clozed" tooltip="Correct"><i class="glyphicon glyphicon-thumbs-up"></i> </button>
          <button type="button" class="btn btn-lg btn-default" ng-click="flip()" tooltip="Flip"><i class="glyphicon glyphicon-repeat"></i> </button>
          <button type="button" class="btn btn-lg btn-default" ng-click="down()" ng-disabled="clozed" tooltip="Incorrect"><i class="glyphicon glyphicon-thumbs-down"></i> </button>
        </div>
      </div>
      <div class="col-md-3 text-center">
        <div class="btn-group">
          <a class="btn btn-lg btn-default" ng-click="prev()"  tooltip="Next"><span class="glyphicon glyphicon-chevron-left"></span></a>
          <a class="btn btn-lg btn-default" ng-click="next()" tooltip="Previous"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <a class="btn btn-xs btn-default badge" href="#/new" ng-model="filter" btn-radio="0">\{{(cards | statusFilter:0).length}} new</a>
        <a class="btn btn-xs btn-default badge" href="#/due" ng-model="filter" btn-radio="1">\{{(cards | statusFilter:1).length}} due</a>
        <a class="btn btn-xs btn-default badge" href="#/done" ng-model="filter" btn-radio="2">\{{(cards | statusFilter:2).length}} done</a>
        <a class="btn btn-xs btn-default badge" href="#/all" ng-model="filter" btn-radio="-1">\{{cards.length}} total</a>
      </div>
    </div>
  </div>


  </div>
</div>
