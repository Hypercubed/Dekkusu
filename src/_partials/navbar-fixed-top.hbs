---
component: navbar
---
<div class="navbar navbar-inverse navbar-fixed-top" ng-init="collapse=true" ng-controller="NavCtrl">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" ng-click="collapse=!collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand {{#is page.dest 'out/index.html'}}active{{/is}}" href="{{assets}}">{{site.title}}</a>
    </div>
    <div class="navbar-collapse collapse" ng-class="{collapse:collapse}">

      <ul class="nav navbar-nav">
        {{#each tags}}{{#is tag 'page'}}
            {{#each pages}}
              <li typeof="sioc:Page" about="document.url" class="{{#is ../../../page.dest dest}}active{{/is}}" >
                <a href="{{relative ../../../page.dest dest}}" property="dc:title">{{data.title}}</a>
              </li>
            {{/each}}
        {{/is}}{{/each}}
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text" ng-show="user" ng-cloak>\{{user.name}}</li>
        <li ng-show="user" ng-cloak><a href="#" ng-click="logout()">Logout</a></li>
        <li ng-hide="user"><a href="#" ng-click="login()">Login</a></li>
      </ul>

    </div>
  </div>
</div>


